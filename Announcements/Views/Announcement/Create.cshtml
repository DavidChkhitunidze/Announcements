@model AnnouncementForCreation

@{
    ViewData["Title"] = "Create - Announcement";
}

<h2>Create</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Announcement" asp-action="Create">
    <h4>Announcement</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Description" Class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Phone" Class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="VipAnnouncement" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="checkbox" asp-for="VipAnnouncement" />
            <span asp-validation-for="VipAnnouncement" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Image</label>
        <div class="col-md-10">
            <input asp-for="ImageName" type="file" accept="image/*" Class="form-control" />
        </div>
    </div>
    <div class="row" style="padding-top: 30px;">
        <div class="col-md-1">
            <input type="submit" value="Create" style="width: 80px;" class="btn btn-primary" />
        </div>
        <div class="col-md-1">
            <a asp-action="Index" style="width: 80px;" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
