@model AnnouncementGettingViewModel

@{
    ViewData["Title"] = "Details - Announcement";
}

<h2>Details</h2>

<form>
    <h4>Announcement</h4>
    <hr />
    <div class="row">
        <div class="col-xs-4">
            <div class="form-group">
                <div class="col-md-10">
                    <img class="content-image" src="~/images/content/@Model.ImageName" />
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <b><label asp-for="Title" class="col-md-2 control-label"></label></b>
                <div class="col-md-10">
                    @Model.Title
                </div>
            </div>
            <div class="form-group">
                <b><label asp-for="Description" class="col-md-2 control-label"></label></b>
                <div class="col-md-10">
                    @Model.Description
                </div>
            </div>
            <div class="form-group">
                <b><label asp-for="Phone" class="col-md-2 control-label"></label></b>
                <div class="col-md-10">
                    @Model.Phone
                </div>
            </div>
            <div class="form-group">
                <b><label asp-for="VipAnnouncement" class="col-md-2 control-label"></label></b>
                <div class="col-md-10">
                    @Model.VipAnnouncement
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="padding-top: 30px;">
        <div class="col-md-1">
            <a asp-action="Edit" asp-route-id="@Model.ID" style="width: 80px;" class="btn btn-warning">Edit</a>
        </div>
        <div class="col-md-1">
            <a asp-action="Delete" asp-route-id="@Model.ID" style="width: 80px;" class="btn btn-danger">Delete</a>
        </div>
        <div class="col-md-1">
            <a asp-action="Index" style="width: 80px;" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>