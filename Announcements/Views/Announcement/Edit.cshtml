@model AnnouncementForUpdate

@{
    ViewData["Title"] = "Edit - Announcement";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <h4>Announcement</h4>
    <hr />
    <div class="row">
        <div class="col-xs-4">
            <div class="form-group">
                <div class="col-md-10" style="display: inline-block">
                    <img class="content-image" src="~/images/content/@Model.ImageName" /><br /><br />
                    <input asp-for="ImageName" type="file" accept="image/*" style="width: 250px;" Class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="ID" />*@
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VipAnnouncement" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="checkbox" asp-for="VipAnnouncement" />
                    <span asp-validation-for="VipAnnouncement" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="padding-top: 30px;">
        <div class="col-md-1">
            <input type="submit" value="Save" style="width: 80px;" class="btn btn-primary" />
        </div>
        @*<div class="col-md-1">
            <a asp-action="Details" asp-route-id="@Model.ID" style="width: 80px;" class="btn btn-secondary">Back</a>
        </div>*@
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
